<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Diz.Gui.Avalonia.ViewModels"
        xmlns:uc="clr-namespace:Diz.Gui.Avalonia.Views.UserControls"
        x:Class="Diz.Gui.Avalonia.Views.Windows.MainView"
        Icon="Assets/diz-icon2-magenta-med32x32.ico"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="150"

        Title="DiztinGUIsh 3.0 (preview)"
        Name="MainWindow"
        MinWidth="800"
        MinHeight="150">

    <Design.DataContext>
        <viewModels:PeopleViewModel />
    </Design.DataContext>

    <StackPanel>
        <Menu Background="AliceBlue">
            <MenuItem Header="File"/>
            <MenuItem Header="Edit"/>
            <MenuItem Header="Help"/>
        </Menu>
        <uc:MainGridUserControl/>
    </StackPanel>
</Window>

