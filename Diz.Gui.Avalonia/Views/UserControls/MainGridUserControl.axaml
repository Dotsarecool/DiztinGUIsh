<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Diz.Gui.Avalonia.ViewModels"
             mc:Ignorable="d" 
             d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Diz.Gui.Avalonia.Views.UserControls.MainGridUserControl">
    
    <Design.DataContext>
        <viewModels:PeopleViewModel />
    </Design.DataContext>
    
    <StackPanel>
        <DataGrid AutoGenerateColumns="True" Items="{Binding People}" />
    </StackPanel>
</UserControl>